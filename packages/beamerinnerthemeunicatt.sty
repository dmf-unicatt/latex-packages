\mode<presentation>

% Logo to use in the title page.
\def\unicatt@titlepagelogo{}
\DeclareOptionBeamer{titlepagelogo}{\def\unicatt@titlepagelogo{#1}}

% Bullet shape.
\DeclareOptionBeamer{bullet}{\def\unicatt@bullet{#1}}
\ExecuteOptionsBeamer{bullet=circle}
\ProcessOptionsBeamer

% Colors.
\setbeamercolor*{lineup}{parent=palette primary}
\setbeamercolor*{linebottom}{parent=palette secondary}
\setbeamercolor*{title page header}{parent=palette tertiary}

% Lengths.
\newlength{\unicatt@lineup}
\setlength{\unicatt@lineup}{.015\paperheight}
\newlength{\unicatt@linebottom}
\setlength{\unicatt@linebottom}{.015\paperheight}
\newlength{\unicatt@titlebox}
\setlength{\unicatt@titlebox}{.4\paperheight}

% Margins.
\newlength{\unicatt@normalmargin}
\setlength{\unicatt@normalmargin}{.06\paperwidth}
\setbeamersize{text margin left=\unicatt@normalmargin}
\setbeamersize{text margin right=\unicatt@normalmargin}
\setlength\leftmargini{.6\unicatt@normalmargin}
\setlength\leftmarginii{.6\unicatt@normalmargin}
\setlength\leftmarginiii{.6\unicatt@normalmargin}

% Title page, you should use this in a frame with the [plain] option.
\defbeamertemplate*{title page normal}{unicatt theme}[1][]
{
  {\parskip0pt\offinterlineskip%
  \hbox{\hskip-\Gm@lmargin\hbox{\vbox{%
  \@tempdima=\textwidth\textwidth=\paperwidth\hsize=\textwidth\vbox{}\vskip-1.5ex%
    % Top line.
    \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=\unicatt@lineup,dp=0pt]{lineup}%
    \end{beamercolorbox}%
    }%
    \vbox{}\vskip0ex%
    % Title.
    \begin{beamercolorbox}[wd=\paperwidth,ht=\unicatt@titlebox,center,#1]{title page header}
      {\usebeamerfont{title}\LARGE\bf\inserttitle}\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%
      \vspace{.1\paperheight}%
    \end{beamercolorbox}%
    % Bottom line.
    \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=\unicatt@linebottom,dp=0pt]{linebottom}%
    \end{beamercolorbox}%
    }%
    \vskip0pt%
  }}%
  \hskip-\Gm@rmargin%
  }}\hfil%
  %
  \begin{columns}
      \ifx\unicatt@titlepagelogo\@empty%
          \column{\textwidth}
      \else
          \column{.5\textwidth}
              % Logo.
              \vspace{-5mm}
              \begin{centering}
                  \vbox{}\vfill
                  \includegraphics[height=.5\paperheight]{\unicatt@titlepagelogo}
                  \vfill
              \end{centering}
          \column{.5\textwidth}
       \fi
          % Authors, institute and date
          \vskip-1em\par
          \begin{beamercolorbox}[sep=8pt,left,#1]{author}
            \usebeamerfont{author}\insertauthor
          \end{beamercolorbox}
          \vskip-0.5em\par
          \begin{beamercolorbox}[sep=8pt,left,#1]{institute}
            \usebeamerfont{institute}\insertinstitute
          \end{beamercolorbox}
          \vskip-0.5em\par
          \begin{beamercolorbox}[sep=8pt,left,#1]{date}
            \usebeamerfont{date}\insertdate
          \end{beamercolorbox}\vskip0.5em
          {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \end{columns}
}

\defbeamertemplate*{title page}{unicatt theme}[1][]
{
  \addtocounter{framenumber}{-1}
  \def\unicatt@truetext{true}%
  \usebeamertemplate{title page normal}%
}

% Items.
\setbeamercolor*{itemize subitem}{fg=secondary_color}
\setbeamercolor*{enumerate subitem}{fg=secondary_color}

\defbeamertemplate{itemize item}{squarealt}%
{\tiny\raise.5ex\hbox{\donotcoloroutermaths$\blacksquare$}}
\defbeamertemplate{itemize subitem}{squarealt}%
{\tiny\raise.4ex\hbox{\donotcoloroutermaths$\square$}}
\defbeamertemplate{itemize subsubitem}{squarealt}%
{\tiny\raise.3ex\hbox{\donotcoloroutermaths$\blacksquare$}}

\defbeamertemplate{itemize item}{circlealt}%
{\small\raise.2ex\hbox{\donotcoloroutermaths$\bullet$}}
\defbeamertemplate{itemize subitem}{circlealt}%
{\small\raise.1ex\hbox{\donotcoloroutermaths$\bullet$}}
\defbeamertemplate{itemize subsubitem}{circlealt}%
{\scriptsize\raise.1ex\hbox{\donotcoloroutermaths$\bullet$}}

\def\circletext{circle}
\ifx\unicatt@bullet\circletext
  \setbeamertemplate{items}[circlealt]
\else
  \setbeamertemplate{items}[squarealt]
\fi

\mode<all>
